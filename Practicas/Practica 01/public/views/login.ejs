<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
	<link rel="stylesheet" href="/CSS/cabecera.css">
    <link rel="stylesheet" href="/CSS/practica.css">
	<link rel="stylesheet" href="/CSS/login.css">
    <meta charset="utf-8">
    <title>Bienvenido - FaceBluff</title>
  </head>
  <body>
	<%- include("headerNoLogged.ejs") %>
	<div class="content">
	<div class="titulo">
		<h1>Entrar</h1>
	</div>
	<div class="seccion">
		<div class="login">
				<% if (errors != null) { %>
					<div class="contError">
						<ul>
						<% errors.forEach(error=>{ %>
							<li><span class="error"><%= error.msg %></span></li>
						<% }) %>
						</ul>
					</div>
				<% } %>
			<form class="formularioLogin" action="/users/doLogin" method="post">
				<div class="contDatosLogin">
					<span>Email</span><span><input type="text" name="email" class="inputText"/></span>
					<span>Contrase√±a</span><span><input type="password" name="pass" class="inputText"/></span>
				</div>
				<div class="contBoton">
					<span><input type="submit" value="Conectar" class="boton"/></span>
				</div>
			</form>
		</div>
	</div>
	</div>
  </body>
</html>
