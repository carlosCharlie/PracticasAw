  <body>
			<%- include("headerLogged.ejs") %>
	<div class="content">
		<div class="titulo">
		  <h1>Perfil</h1>
		</div>
		<div class="seccion">
			<div class="perfil">
			
				<div class="informacionPerfil">
					<img src= '/getUserImage/<%= user.email %>' class="miniaturaPerfilGrande" alt="Imagen de Perfil">
					<h2 id="nombreUsuario"><%= user.name%></h2>
					<h3 id="edadUsuario"><%= user.years+" AÃ±os" %> </h3>
